@page "/"
@using Eshop.Pages;
@inherits ProductBase

@if (Products == null)
{
    <h3> Products loading...</h3>
}else 
{
    <h3 class="mb-5">Products</h3>
    var productCount = Products.Count();
    @if (productCount > 0)
    {
        
        @foreach (var prodGroup in GetGroupedProductsByCategory())
            {
            <h3>@GetCategoryName(prodGroup) </h3>
                
            <div class="row mt-3">
                <DisplayPoduct Products="@prodGroup.Take(4)"></DisplayPoduct>
            </div>
            <hr class="mb-3" />
            
           
      
        }

    }
}