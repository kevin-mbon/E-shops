@page "/DisplayProductDetails/{id:int}"
@using Eshop.Pages;
@inherits DisplayProductDetailsBase


@if(Product == null && ErrorMessage == null ){
    <h4>Product details loading.....</h4>
}else if(ErrorMessage != null){
    
    <h3 class="text-danger">@ErrorMessage</h3>
}else{
    <h3 class="mb-5">Product details</h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@Product.ImgUrl">
        </div>
        <div class="col-md-5 ">
            <h3>@Product.Name</h3>
            <p class="mb-4">@Product.Description</p>
            <p class="mb-4">
                <b>
                    <b>@($" ${Product.Price}")</b>&nbsp; (@Product.Qty items in stock)
                 @*   Product.Price.ToString("C")&nbsp;*@
                </b>
            </p>
            <div class="mt-5">
                <a class="btn btn-secondary" href="#">
                    Add to Cart
                </a>
            </div>
        </div>
    </div>
}