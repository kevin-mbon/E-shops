
@using Eshop.Pages;
@inherits DisplayProductBase

@foreach (var item in Products)
{
    <div class="col-md-3 mb-2">
        <a href="/DisplayProductDetails/@item.Id">
            <div class="card">
                <img class="img-thumbnail" style="width :100%" src="@item.ImgUrl" />
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        @item.Name

                    </h5>
                    <p class="card-text">
                        <b>@($" ${item.Price}")</b>



                    </p>
                </div>
            </div>

        </a>
    </div>
}